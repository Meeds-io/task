               xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">

  <component>
    <key>org.exoplatform.task.service.DAOHandler</key>
    <type>org.exoplatform.task.service.jpa.DAOHandlerJPAImpl</type>
  </component>

  <!--
  <component>
