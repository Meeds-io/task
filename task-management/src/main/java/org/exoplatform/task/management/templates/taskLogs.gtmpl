#{param name=taskLogs/}
#{param name=bundle/}

<%
import org.exoplatform.task.utils.TaskUtil;

for (def log : taskLogs) {%>
	<div class="row-fluid task-log-row">
		<div class="span6">
			<strong><%=log.getAuthor() %></strong>
	 	<%=bundle.getString(log.getMsg()) %>
	<%if (log.getTarget() != null) {%>
	<strong><%=log.getTarget() %></strong>
	<%} %>    	
		</div>
		<div class="span6">
		<%= TaskUtil.getPeriod(log.getCreatedTime(), bundle)%>
		</div>
	</div>
<%} %>