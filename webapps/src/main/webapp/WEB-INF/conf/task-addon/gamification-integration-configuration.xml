<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_3.xsd http://www.exoplatform.org/xml/ns/kernel_1_3.xsd" xmlns="http://www.exoplatform.org/xml/ns/kernel_1_3.xsd">
  <external-component-plugins>
    <target-component>org.exoplatform.services.listener.ListenerService</target-component>
    <component-plugin>
      <name>exo.task.taskCreation</name>
      <set-method>addListener</set-method>
      <type>org.exoplatform.task.integration.gamification.GamificationTaskUpdateListener</type>
    </component-plugin>
    <component-plugin>
      <name>exo.task.taskUpdate</name>
      <set-method>addListener</set-method>
      <type>org.exoplatform.task.integration.gamification.GamificationTaskUpdateListener</type>
    </component-plugin>
    <component-plugin>
      <name>exo.task.taskCommentCreation</name>
      <set-method>addListener</set-method>
      <type>org.exoplatform.task.integration.gamification.GamificationTaskCommentListener</type>
    </component-plugin>
  </external-component-plugins>

  <external-component-plugins>
    <target-component>org.exoplatform.addons.gamification.service.setting.rule.RuleRegistry</target-component>
    <component-plugin>
      <name>rule.CreateNewTask</name>
      <set-method>addPlugin</set-method>
      <type>org.exoplatform.addons.gamification.service.setting.rule.model.RuleConfig</type>
      <init-params>
        <value-param>
          <name>rule-title</name>
          <value>createNewTask</value>
        </value-param>
        <value-param>
          <name>rule-description</name>
          <value>You created a task</value>
        </value-param>
        <value-param>
          <name>rule-event</name>
          <value>createNewTask</value>
        </value-param>
        <value-param>
          <name>rule-score</name>
          <value>3</value>
        </value-param>
        <value-param>
          <name>rule-enable</name>
          <value>false</value>
        </value-param>
      </init-params>
    </component-plugin>
    <component-plugin>
      <name>rule.CompleteTaskAssigned</name>
      <set-method>addPlugin</set-method>
      <type>org.exoplatform.addons.gamification.service.setting.rule.model.RuleConfig</type>
      <init-params>
        <value-param>
          <name>rule-title</name>
          <value>completeTaskAssigned</value>
        </value-param>
        <value-param>
          <name>rule-description</name>
          <value>You Completed an assigned task</value>
        </value-param>
        <value-param>
          <name>rule-event</name>
          <value>completeTaskAssigned</value>
        </value-param>
        <value-param>
          <name>rule-score</name>
          <value>5</value>
        </value-param>
        <value-param>
          <name>rule-enable</name>
          <value>false</value>
        </value-param>
      </init-params>
    </component-plugin>
    <component-plugin>
      <name>rule.CompleteTaskCoworker</name>
      <set-method>addPlugin</set-method>
      <type>org.exoplatform.addons.gamification.service.setting.rule.model.RuleConfig</type>
      <init-params>
        <value-param>
          <name>rule-title</name>
          <value>completeTaskCoworker</value>
        </value-param>
        <value-param>
          <name>rule-description</name>
          <value>You completed a task as coworker</value>
        </value-param>
        <value-param>
          <name>rule-event</name>
          <value>completeTaskCoworker</value>
        </value-param>
        <value-param>
          <name>rule-score</name>
          <value>1</value>
        </value-param>
        <value-param>
          <name>rule-enable</name>
          <value>false</value>
        </value-param>
      </init-params>
    </component-plugin>
    <component-plugin>
      <name>rule.CommentTask</name>
      <set-method>addPlugin</set-method>
      <type>org.exoplatform.addons.gamification.service.setting.rule.model.RuleConfig</type>
      <init-params>
        <value-param>
          <name>rule-title</name>
          <value>commentTask</value>
        </value-param>
        <value-param>
          <name>rule-description</name>
          <value>You commented a task</value>
        </value-param>
        <value-param>
          <name>rule-event</name>
          <value>commentTask</value>
        </value-param>
        <value-param>
          <name>rule-score</name>
          <value>2</value>
        </value-param>
        <value-param>
          <name>rule-enable</name>
          <value>false</value>
        </value-param>
      </init-params>
    </component-plugin>
    <component-plugin>
      <name>rule.UpdateTask</name>
      <set-method>addPlugin</set-method>
      <type>org.exoplatform.addons.gamification.service.setting.rule.model.RuleConfig</type>
      <init-params>
        <value-param>
          <name>rule-title</name>
          <value>updateTask</value>
        </value-param>
        <value-param>
          <name>rule-description</name>
          <value>You updated a task</value>
        </value-param>
        <value-param>
          <name>rule-event</name>
          <value>updateTask</value>
        </value-param>
        <value-param>
          <name>rule-score</name>
          <value>1</value>
        </value-param>
        <value-param>
          <name>rule-enable</name>
          <value>false</value>
        </value-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>
</configuration>
