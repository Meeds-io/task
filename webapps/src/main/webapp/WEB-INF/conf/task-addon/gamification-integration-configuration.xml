<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_3.xsd http://www.exoplatform.org/xml/ns/kernel_1_3.xsd" xmlns="http://www.exoplatform.org/xml/ns/kernel_1_3.xsd">
  <external-component-plugins>
    <target-component>org.exoplatform.services.listener.ListenerService</target-component>
    <component-plugin>
      <name>exo.task.taskCreation</name>
      <set-method>addListener</set-method>
      <type>org.exoplatform.task.integration.gamification.GamificationTaskUpdateListener</type>
    </component-plugin>
    <component-plugin>
      <name>exo.task.taskUpdate</name>
      <set-method>addListener</set-method>
      <type>org.exoplatform.task.integration.gamification.GamificationTaskUpdateListener</type>
    </component-plugin>
    <component-plugin>
      <name>exo.task.taskCommentCreation</name>
      <set-method>addListener</set-method>
      <type>org.exoplatform.task.integration.gamification.GamificationTaskCommentListener</type>
    </component-plugin>
  </external-component-plugins>

  <external-component-plugins>
    <target-component>io.meeds.gamification.service.EventRegistry</target-component>
    <component-plugin>
      <name>CreateNewTask</name>
      <set-method>addPlugin</set-method>
      <type>io.meeds.gamification.plugin.EventConfigPlugin</type>
      <init-params>
        <object-param>
          <name>event</name>
          <object type="io.meeds.gamification.model.EventDTO">
            <field name="title">
              <string>createNewTask</string>
            </field>
            <field name="type">
              <string>meeds</string>
            </field>
            <field name="trigger">
              <string>createNewTask</string>
            </field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>
    <component-plugin>
      <name>CompleteTask</name>
      <set-method>addPlugin</set-method>
      <type>io.meeds.gamification.plugin.EventConfigPlugin</type>
      <init-params>
        <object-param>
          <name>event</name>
          <object type="io.meeds.gamification.model.EventDTO">
            <field name="title">
              <string>completeTask</string>
            </field>
            <field name="type">
              <string>meeds</string>
            </field>
            <field name="trigger">
              <string>completeTask</string>
            </field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>
    <component-plugin>
      <name>CompleteTaskAssigned</name>
      <set-method>addPlugin</set-method>
      <type>io.meeds.gamification.plugin.EventConfigPlugin</type>
      <init-params>
        <object-param>
          <name>event</name>
          <object type="io.meeds.gamification.model.EventDTO">
            <field name="title">
              <string>completeTaskAssigned</string>
            </field>
            <field name="type">
              <string>meeds</string>
            </field>
            <field name="trigger">
              <string>completeTaskAssigned</string>
            </field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>
    <component-plugin>
      <name>CompleteTaskCoworker</name>
      <set-method>addPlugin</set-method>
      <type>io.meeds.gamification.plugin.EventConfigPlugin</type>
      <init-params>
        <object-param>
          <name>event</name>
          <object type="io.meeds.gamification.model.EventDTO">
            <field name="title">
              <string>completeTaskCoworker</string>
            </field>
            <field name="type">
              <string>meeds</string>
            </field>
            <field name="trigger">
              <string>completeTaskCoworker</string>
            </field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>
    <component-plugin>
      <name>CommentTask</name>
      <set-method>addPlugin</set-method>
      <type>io.meeds.gamification.plugin.EventConfigPlugin</type>
      <init-params>
        <object-param>
          <name>event</name>
          <object type="io.meeds.gamification.model.EventDTO">
            <field name="title">
              <string>commentTask</string>
            </field>
            <field name="type">
              <string>meeds</string>
            </field>
            <field name="trigger">
              <string>commentTask</string>
            </field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>
    <component-plugin>
      <name>UpdateTask</name>
      <set-method>addPlugin</set-method>
      <type>io.meeds.gamification.plugin.EventConfigPlugin</type>
      <init-params>
        <object-param>
          <name>event</name>
          <object type="io.meeds.gamification.model.EventDTO">
            <field name="title">
              <string>updateTask</string>
            </field>
            <field name="type">
              <string>meeds</string>
            </field>
            <field name="trigger">
              <string>updateTask</string>
            </field>
          </object>
        </object-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>
</configuration>
